{
  "id": "io.particle",
  "version": "0.9.8",
  "compatibility": ">=5.0.0",
  "brandColor": "#01b6f1",
  "sdk": 3,
  "name": {
    "en": "Particle.io",
    "sv": "Particle.io"
  },
  "tags": {
    "en": [
      "particle.io",
      "particle",
      "cloud",
      "iot"
    ],
    "sv": [
      "particle.io",
      "particle",
      "moln",
      "cloud",
      "iot"
    ]
  },
  "description": {
    "en": "Bridge the gap between the physical and digital world",
    "sv": "Brygga gapet mellan den fysiska och digitala världen"
  },
  "category": [
    "internet"
  ],
  "images": {
    "large": "/assets/images/large.png",
    "small": "/assets/images/small.png"
  },
  "author": {
    "name": "Richard Barkestam",
    "email": "richard@barkestam.se"
  },
  "contributing": {
    "donate": {
      "paypal": {
        "username": "RBarkestam",
        "currency": "EUR"
      }
    }
  },
  "bugs": {
    "url": "https://github.com/ricott/homey-io.particle/issues"
  },
  "source": "https://github.com/ricott/homey-io.particle",
  "homeyCommunityTopicId": 20841,
  "capabilities": {
    "connected": {
      "title": {
        "en": "Device connected",
        "sv": "Uppkopplad"
      },
      "type": "boolean",
      "getable": true,
      "setable": false,
      "icon": "/drivers/clouddevice/assets/connected.svg"
    }
  },
  "drivers": [
    {
      "id": "clouddevice",
      "class": "other",
      "name": {
        "en": "Particle Cloud Device",
        "sv": "Particle molnenhet"
      },
      "images": {
        "large": "/drivers/clouddevice/assets/images/large.png",
        "small": "/drivers/clouddevice/assets/images/small.png"
      },
      "capabilities": [
        "connected"
      ],
      "energy": {
        "approximation": {
          "usageConstant": 1
        }
      },
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "Settings",
            "sv": "Inställningar"
          },
          "children": [
            {
              "id": "refresh_interval",
              "type": "number",
              "label": {
                "en": "Refresh interval (seconds)",
                "sv": "Uppdateringsintervall (sekunder)"
              },
              "value": 60,
              "min": 5,
              "max": 3600
            },
            {
              "id": "generate_device_events",
              "type": "radio",
              "label": {
                "en": "Enable device events as a trigger",
                "sv": "Använd enhetshändelser som när-kort"
              },
              "value": "no",
              "values": [
                {
                  "id": "yes",
                  "label": {
                    "en": "Yes",
                    "sv": "Ja"
                  }
                },
                {
                  "id": "no",
                  "label": {
                    "en": "No",
                    "sv": "Nej"
                  }
                }
              ]
            }
          ]
        },
        {
          "type": "group",
          "label": {
            "en": "Information",
            "sv": "Information"
          },
          "children": [
            {
              "id": "serial_number",
              "type": "label",
              "label": {
                "en": "Serial number",
                "sv": "Serienummer"
              },
              "value": ""
            },
            {
              "id": "firmware_version",
              "type": "label",
              "label": {
                "en": "Firmware",
                "sv": "Firmware"
              },
              "value": ""
            },
            {
              "id": "last_ip_address",
              "type": "label",
              "label": {
                "en": "Last known IP address",
                "sv": "Senast kända IP adress"
              },
              "value": ""
            },
            {
              "id": "last_heard",
              "type": "label",
              "label": {
                "en": "Last seen",
                "sv": "Senast sedd"
              },
              "value": ""
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_devices",
          "template": "list_devices",
          "navigation": {
            "next": "add_devices"
          }
        },
        {
          "id": "add_devices",
          "template": "add_devices"
        }
      ]
    }
  ],
  "flow": {
    "triggers": [
      {
        "id": "device_connected",
        "title": {
          "en": "Cloud device connected",
          "sv": "Enhet uppkopplad"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=clouddevice"
          }
        ]
      },
      {
        "id": "device_disconnected",
        "title": {
          "en": "Cloud device disconnected",
          "sv": "Enhet nedkopplad"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=clouddevice"
          }
        ]
      },
      {
        "id": "device_event",
        "title": {
          "en": "Device event",
          "sv": "Enhetshändelse"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=clouddevice"
          }
        ],
        "tokens": [
          {
            "name": "event_name",
            "type": "string",
            "title": {
              "en": "Event name",
              "sv": "Händelsenamn"
            },
            "example": {
              "en": "temperature"
            }
          },
          {
            "name": "event_value",
            "type": "string",
            "title": {
              "en": "Event value",
              "sv": "Händelsevärde"
            },
            "example": {
              "en": "12.1"
            }
          }
        ]
      },
      {
        "id": "a_device_connected",
        "title": {
          "en": "Device connected",
          "sv": "Enhet uppkopplad"
        },
        "tokens": [
          {
            "name": "serial",
            "type": "string",
            "title": {
              "en": "Serial number",
              "sv": "Serienummer"
            },
            "example": {
              "en": "PH-NNNNNN-AAAA-N"
            }
          },
          {
            "name": "name",
            "type": "string",
            "title": {
              "en": "Device name",
              "sv": "Enhetsnamn"
            },
            "example": {
              "en": "Garage door"
            }
          },
          {
            "name": "ip_address",
            "type": "string",
            "title": {
              "en": "IP address",
              "sv": "IP adress"
            },
            "example": {
              "en": "111.111.111.111"
            }
          }
        ]
      },
      {
        "id": "a_device_disconnected",
        "title": {
          "en": "Device disconnected",
          "sv": "Enhet nedkopplad"
        },
        "tokens": [
          {
            "name": "serial",
            "type": "string",
            "title": {
              "en": "Serial number",
              "sv": "Serienummer"
            },
            "example": {
              "en": "PH-NNNNNN-AAAA-N"
            }
          },
          {
            "name": "name",
            "type": "string",
            "title": {
              "en": "Device name",
              "sv": "Enhetsnamn"
            },
            "example": {
              "en": "Garage door"
            }
          },
          {
            "name": "ip_address",
            "type": "string",
            "title": {
              "en": "IP Address",
              "sv": "IP adress"
            },
            "example": {
              "en": "111.111.111.111"
            }
          }
        ]
      }
    ],
    "conditions": [
      {
        "id": "particle_variable_condition",
        "title": {
          "en": "Compare device property",
          "sv": "Jämför enhetsegenskap"
        },
        "titleFormatted": {
          "en": "Compare [[variable]] with [[conditionValue]] using [[conditionType]]",
          "sv": "Jämför [[variable]] med [[conditionValue]] med hjälp av [[conditionType]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=clouddevice"
          },
          {
            "name": "variable",
            "type": "autocomplete",
            "title": {
              "en": "Device property",
              "sv": "Enhetsegenskap"
            }
          },
          {
            "name": "conditionType",
            "type": "autocomplete",
            "title": {
              "en": "Condition type",
              "sv": "Villkor"
            }
          },
          {
            "name": "conditionValue",
            "type": "text",
            "title": {
              "en": "Value",
              "sv": "Värde"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "particle_function",
        "title": {
          "en": "Call function",
          "sv": "Anropa funktion"
        },
        "titleFormatted": {
          "en": "Call [[function]] with [[parameter]]",
          "sv": "Anropa [[function]] med [[parameter]]"
        },
        "args": [
          {
             "name": "device",
             "type": "device",
             "filter": "driver_id=clouddevice"
          },
          {
            "type": "autocomplete",
            "name": "function",
            "title": {
              "en": "Function",
              "sv": "Funktion"
            }
          },
          {
            "type": "text",
            "name": "parameter",
            "title": {
              "en": "Parameter",
              "sv": "Parameter"
            }
          }
        ]
      },
      {
        "id": "particle_event",
        "title": {
          "en": "Publish event",
          "sv": "Publicera händelse"
        },
        "titleFormatted": {
          "en": "Publish [[event_name]] with [[event_data]] and [[event_private]]",
          "sv": "Publicera [[event_name]] med [[event_data]] och [[event_private]]"
        },
        "args": [
          {
            "name": "device",
            "type": "device",
            "filter": "driver_id=clouddevice"
          },
          {
            "type": "text",
            "name": "event_name",
            "title": {
              "en": "Event",
              "sv": "Händelse"
            },
            "placeholder": {
              "en": "/garage/temp"
            }
          },
          {
            "type": "text",
            "name": "event_data",
            "title": {
              "en": "Data",
              "sv": "Data"
            },
            "placeholder": {
              "en": "19.1"
            }
          },
          {
            "type": "dropdown",
            "name": "event_private",
            "title": {
              "en": "Visibility",
              "sv": "Synlighet"
            },
            "values": [
              {
                "id": "true",
                "label": {
                  "en": "Private",
                  "sv": "Privat"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "Public",
                  "sv": "Publikt"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}